{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "ROBLOX Custom Backgrounds",
  "description": "This new background changer for ROBLOX allows you to customize your background to your taste!.",
  "version": "1",

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "permissions": [
    "activeTab",
    "*://ajax.googleapis.com/",
    "cookies",
    "*://*.roblox.com/",
    "background",
    "alarms",
    "notifications"
  ],

  "background": {
  	"scripts": ["backgroundWorker.js", "jQuery-ver3.js"],
  	"persistent": false
  }

}
